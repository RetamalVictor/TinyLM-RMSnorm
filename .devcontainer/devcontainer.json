{
    "name": "TinyLM-Lab",
    "dockerComposeFile": "docker-compose.yml",
    "service": "tinylm",
    "workspaceFolder": "/workspace/app",
    "postCreateCommand": "uv sync && python setup.py build_ext --inplace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/workspace/app/.venv/bin/python",
                "python.analysis.typeCheckingMode": "basic",
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff"
                }
            }
        }
    },
    "remoteUser": "root"
}
